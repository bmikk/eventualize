<%= simple_form_for @event do |f| %>
  <%= f.error_notification %>
   <div class="field">
      <div class="control">
        <%= f.input :title,
                    label: "What's the event?",
                    required: false,
                    placeholder: "Event title",
                    input_html: {class: "input" },
                    label_html: { class: "label" },
                    wrapper: false %>
      </div>
    </div>
   
   <div class="field">
      <div class="control">
        <%= f.input :location, label: "Where's the shindig?", input_html: { class: "input" }, 
          wrapper: false, label_html: { class: "label" }, placeholder: "Location...", 
          autofocus: true %>   
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <%= f.input :start_date,
                    label: "What day?",
                    required: false,
                    placeholder: "Day",
                    label_html: { class: "label" },
                    wrapper: false %>
      </div>

      <div class="control">
        <%= f.input :start_time,
                    label: "What time?",
                    required: false,
                    placeholder: "Time",
                    label_html: { class: "label" },
                    wrapper: false %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :description, label: "Gimme the deets!", input_html: { class: "textarea" }, 
          wrapper: false, label_html: { class: "label" }, placeholder: "Event details..." %>
      </div>
    </div>

   <%= f.button :submit, class: "button is-primary" %>
<% end %>
