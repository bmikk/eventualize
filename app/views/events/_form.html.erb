<%= simple_form_for @event do |f| %>
  <%= f.error_notification %>
   <div class="field">
      <div class="control">
        <%= f.input :location, label: "Where's the shindig?", input_html: { class: "input" }, 
          wrapper: false, label_html: { class: "label" }, placeholder: "Location...", 
          autofocus: true %>   
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :start_date_and_time,
                    label: "What's the time and day?",
                    required: false,
                    placeholder: "Time and date...",
                    input_html: {class: "input" },
                    label_html: { class: "label" },
                    wrapper: false %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :description, label: "Gimme the deets!", input_html: { class: "textarea" }, 
          wrapper: false, label_html: { class: "label" }, placeholder: "Event details..." %>
      </div>
    </div>

   <%= f.button :submit, class: "button is-primary" %>
<% end %>
